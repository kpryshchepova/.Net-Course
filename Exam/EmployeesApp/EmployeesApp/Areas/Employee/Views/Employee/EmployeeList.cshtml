@model IEnumerable<EmployeesApp.Models.Employee>
<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>EmployeeApp</title>

        <link href="~/css/Employee.css" rel="stylesheet" />
    </head>
    <body>
        <div class="emp-header">
            <h2>Employees List</h2>
        </div>
                
        <div class="wrapper">
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" placeholder="Search" aria-label="Search">
                </div>
                <div class="col">
                    <button class="btn btn-primary" type="button">Search</button>
                </div>
                <div class="col">
                    <a class="btn btn-primary create-btn" type="button" asp-action="Create" asp-controller="Employee">Create Employee</a>
                </div>
            </div>
        </div>

        <div class="table-wrapper">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Speciality</th>
                        <th scope="col">Employement Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>

                <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <th scope="row">@employee.Id</th>
                        <td>@employee.Name</td>
                        <td>@employee.Age</td>
                        <td>@employee.Speciality</td>
                        <td>@employee.EmployementDate.ToShortDateString()</td>
                        <td>
                            <button class="btn btn-outline-primary table-btn" type="button">View Tasks</button>
                            <a asp-action="Edit" asp-route-id="@employee.Id" asp-controller="Employee" class="btn btn-outline-success table-btn" type="button">Edit</a>
                            <button class="btn btn-outline-danger table-btn" type="button">Delete</button>
                        </td>
                    </tr>
                }
                
                </tbody>
            </table>
        </div>
     

    </body>
</html>
